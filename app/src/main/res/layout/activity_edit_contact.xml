<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@android:color/white">

    <Button
        android:background="@drawable/custom_btn_blue"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:onClick="onClickOK"
        android:padding="5dp"
        android:text="OK"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_edit_contact_item_height"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:background="@drawable/custom_edit_text" />

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/name_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <View
        android:layout_height="5dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:id="@+id/phone1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phone1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:background="@drawable/custom_edit_text" />

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/phone1_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <View
        android:layout_height="5dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:id="@+id/phone2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/phone2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:background="@drawable/custom_edit_text" />

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/phone2_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <View
        android:layout_height="5dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:id="@+id/phone3_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/phone3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:background="@drawable/custom_edit_text" />

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/phone3_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <View
        android:layout_height="5dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:id="@+id/phone4_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/phone4_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:background="@drawable/custom_edit_text" />

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/phone4_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <View
        android:layout_height="5dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:id="@+id/phone5_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/phone5_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:background="@drawable/custom_edit_text" />

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/phone5_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />

    </LinearLayout>


</LinearLayout>
